{
  "manifest_version": 2,

  "name": "Lorem Ipsum",
  "description": "Lorem Ipsum",
  "version": "0.1.0",

  "browser_action": {
    "default_icon": "./icon.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "https://*/*"
      ],
      "css": [],
      "js": ["content.js"]
    }
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
